extends core/base.pug

block title 
  title Главная

block content

  .page 

    include core/header.pug

    .content 

      // welcome
      section.welcome

          .welcome__main 

            .container 

              .welcome__container 

                .welcome__content 
                  h1.title Earn 
                    span 6.12% 
                    | per month on currency fluctuations
                  .welcome__text You may not understand anything about trading on the stock exchange, but the NiceBot robot will open and close transactions by itself, increasing the size of your account.
                  .welcome__subtitle Alexy Frundel, 
                    span taxi driver 
                  .welcome__lists 
                    ul.welcome__list 
                      li – Open deposit 
                        b 5 000$
                      li – Connected 
                        b MiloBot
                    ul.welcome__list 
                      li – Аfter 
                        b 3 months 
                        | the account balance is 
                        span 6,253 $
                      li – Profit of 
                        span 1,253$ 
                        | he withdrawn to card
                  .welcome__arrow 
                    svg(class="icon-arrow1")
                      use(xlink:href="img/sprite.svg#arrow1")

                .welcome__img 
                  img(src="img/man.png", alt="")
          
          .welcome__items 
            .row.g-0
              .welcome__item-col.col-md-4 
                .welcome__item 
                  .welcome__item-price $ 856 256
                  .welcome__item-text Profit for 2022
              .welcome__item-col.col-md-4 
                .welcome__item 
                  .welcome__item-price $ 8 059 255
                  .welcome__item-text Balance in robot management 
              .welcome__item-col.col-md-4 
                .welcome__item 
                  .welcome__item-price 16 887 +
                  .welcome__item-text Accounts in management
      // /welcome

      // profit
      section.profit.section-gray 
        .container 
          .profit__head 
            h2.title Profit with NiceBot is really easy
            .btn.btn--yellow Sign up now
          .profit__items 
            .profit__item 
              .profit__icon 1
              .profit__content 
                .profit__title Open an account with a broker
                .profit__text Detailed instructions in your account
            .profit__arrow 
              svg(class="icon-arrow-right-long")
                use(xlink:href="img/sprite.svg#arrow-right-long")
            .profit__item 
              .profit__icon 2
              .profit__content 
                .profit__title Connect the robot
                .profit__text Even a 10 year old can handle it
            .profit__arrow 
              svg(class="icon-arrow-right-long")
                use(xlink:href="img/sprite.svg#arrow-right-long")
            .profit__item 
              .profit__icon 3
              .profit__content 
                .profit__title Withdraw profit
                .profit__text There's no point in postponing the decision
      // /profit

    include core/footer.pug
